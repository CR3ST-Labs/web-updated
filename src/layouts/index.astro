---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

type Props = {
  headerBg?: string;
  title?: string;
  description?: string;
  cover?: string;
};

const { headerBg, title, description, cover }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead description={description ?? SITE_DESCRIPTION} title={title ?? SITE_TITLE} image={cover} />
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <Header bg={headerBg} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
