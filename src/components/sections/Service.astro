---
import { ICONS, type Service } from "../../consts";
import Button from "../atoms/Button.astro";
import Container from "../atoms/Container.astro";

type Props = Service;

const { title, description, cta, id, thumbnail, microcopy }: Props = Astro.props;

const Icon = cta?.icon ? ICONS[cta.icon] : undefined;
---

<section id={id} class="dark:odd:bg-[#040404] odd:bg-[#F9FAFB] pt-32 pb-36 group">
  <Container>
    <div
      class="project-card flex flex-col group-even:flex-col-reverse md:flex-row md:group-even:flex-row-reverse gap-20 min-w-full"
    >
      <div class="flex-1">
        <p class="text-primar-300 dark:text-gray-400 text-sm uppercase font-bold max-md:text-center">{microcopy}</p>
        <h3
          class="font-gotham font-bold max-md:text-center text-3xl sm:text-6xl text-dark-800 dark:text-light-300 mt-9"
        >
          {title}
        </h3>
        <div class="w-full h-1 mt-11 mb-6 bg-border"></div>
        <p class="dark:text-gray-200 max-md:text-center text-dark-300 mt-8 mb-20">
          {description}
        </p>

        {
          cta && (
            <a href={cta?.link} target="_blank" >
              <div class="bg-button_border rounded p-px w-fit h-fit">
                <Button class="bg-none dark:bg-none dark:group-odd:bg-[#040404] group-odd:bg-[#F9FAFB] bg-page font-dm-sans font-bold">
                  <span class=" text-primary-900 dark:text-white">
                    {cta?.text}
                    {Icon && <Icon />}
                  </span>
                </Button>
              </div>
            </a>
          )
        }
      </div>
      <div class="flex-1">
        <img src={thumbnail} alt={`Cr3st digital agency project ${title} thumbnail`} class="w-full rouunded" />
      </div>
    </div>
  </Container>
</section>

