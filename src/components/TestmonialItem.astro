---
type Props = {
  src?: string;
  message?: string;
  name?: string;
  title?: string;
};

const { src, message, name, title } = Astro.props;
---

<div class="">
  <img src={src} alt={name} class="w-8/12 max-md:mx-auto" />
  <p class="dark:text-white max-md:text-center sm:text-xl font-gotham font-light text-dark-700 mt-14 mb-16 w-full">&quot;{message}&quot;</p>
  <div class="max-md:text-center w-full">
    <p class="dark:text-gray-200 sm:text-xl font-gotham font-medium text-dark-600 mb-1" >{name}</p>
    <p class="dark:text-gray-400 max-sm:text-sm font-medium text-dark-600" >{title}</p>
  </div>
</div>

<style></style>
